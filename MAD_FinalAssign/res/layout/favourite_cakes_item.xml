<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/text_view_shape"
    android:padding="10dp"
    android:stretchColumns="1" >

    <TableRow android:layout_marginBottom="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fv_cake_name"
            android:textIsSelectable="FALSE"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/fv_cake_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textIsSelectable="FALSE"
            android:textSize="13sp" />
    </TableRow>

    <TableRow android:layout_marginBottom="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fv_fruit_type"
            android:textIsSelectable="FALSE"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/fv_fruit_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textIsSelectable="FALSE"
            android:textSize="13sp" />
    </TableRow>

    <TableRow android:layout_marginBottom="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fv_jam_type"
            android:textIsSelectable="FALSE"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/fv_jam_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textIsSelectable="FALSE"
            android:textSize="13sp" />
    </TableRow>

    <TableRow android:layout_marginBottom="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fv_topping_type"
            android:textIsSelectable="FALSE"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/fv_topping_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textIsSelectable="FALSE"
            android:textSize="13sp" />
    </TableRow>

    <TableRow android:layout_marginBottom="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fv_cake_size"
            android:textIsSelectable="FALSE"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/fv_cake_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textIsSelectable="FALSE"
            android:textSize="13sp" />
    </TableRow>

    <TableRow android:layout_marginBottom="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fv_cake_acc_price"
            android:textIsSelectable="FALSE"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/fv_cake_acc_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textIsSelectable="FALSE"
            android:textSize="13sp" />
    </TableRow>

    <TableRow android:layout_marginBottom="5dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fv_cake_price"
            android:textIsSelectable="FALSE"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/fv_cake_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textIsSelectable="FALSE"
            android:textSize="13sp" />
    </TableRow>

</TableLayout>